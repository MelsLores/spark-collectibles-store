<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Offers - Collectibles Store</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark brand-bg shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/items">
                <i class="bi bi-shop"></i> Collectibles Store
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/items">
                            <i class="bi bi-grid-3x3-gap"></i> Items
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/offers/list">
                            <i class="bi bi-tag"></i> Offers
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <div class="brand-bg text-white py-5">
        <div class="container">
            <h1 class="display-4 fw-bold">
                <i class="bi bi-tag-fill"></i> All Submitted Offers
            </h1>
            <p class="lead">View all offers made by interested buyers</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container my-5">
        <div class="row">
            <div class="col-12">
                {{#hasOffers}}
                <!-- Stats Card -->
                <div class="card shadow-sm mb-4 border-0">
                    <div class="card-body bg-light">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <i class="bi bi-tags fs-1 text-primary"></i>
                                <h3 class="mt-2">{{offers.size}} Offers</h3>
                                <p class="text-muted">Total Received</p>
                            </div>
                            <div class="col-md-4">
                                <i class="bi bi-people fs-1 text-success"></i>
                                <h3 class="mt-2">Active</h3>
                                <p class="text-muted">Status</p>
                            </div>
                            <div class="col-md-4">
                                <i class="bi bi-clock-history fs-1 text-info"></i>
                                <h3 class="mt-2">Recent</h3>
                                <p class="text-muted">Latest Updates</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Offers Table Card -->
                <div class="card shadow-lg border-0">
                    <div class="card-header brand-bg text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul"></i> Offer Details
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col"><i class="bi bi-hash"></i> Offer ID</th>
                                        <th scope="col"><i class="bi bi-person"></i> Buyer Name</th>
                                        <th scope="col"><i class="bi bi-envelope"></i> Email</th>
                                        <th scope="col"><i class="bi bi-box-seam"></i> Item</th>
                                        <th scope="col"><i class="bi bi-currency-dollar"></i> Offer Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#offers}}
                                    <tr>
                                        <td>
                                            <span class="badge bg-secondary">{{id}}</span>
                                        </td>
                                        <td>
                                            <i class="bi bi-person-circle text-primary"></i> {{name}}
                                        </td>
                                        <td>
                                            <a href="mailto:{{email}}" class="text-decoration-none">
                                                <i class="bi bi-envelope"></i> {{email}}
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/items/{{itemId}}" class="text-decoration-none">
                                                <i class="bi bi-box-seam"></i> {{itemName}}
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge fs-6 price-badge">{{amount}}</span>
                                        </td>
                                    </tr>
                                    {{/offers}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                {{/hasOffers}}

                {{^hasOffers}}
                <!-- Empty State -->
                <div class="card shadow-lg border-0">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox fs-1 text-muted mb-3 d-block"></i>
                        <h3 class="text-muted">No Offers Yet</h3>
                        <p class="lead text-muted">
                            No offers have been submitted yet. Be the first to make an offer!
                        </p>
                        <a href="/items" class="btn btn-primary btn-lg mt-3">
                            <i class="bi bi-grid-3x3-gap"></i> Browse Items
                        </a>
                    </div>
                </div>
                {{/hasOffers}}

                <!-- Navigation -->
                <div class="mt-4">
                    <a href="/items" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Back to Items List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="brand-bg text-white mt-5 py-4">
        <div class="container text-center">
            <p class="mb-0">
                <i class="bi bi-c-circle"></i> 2025 Collectibles Store - Digital NAO
            </p>
            <small class="text-muted">Sprint 2 - Enhanced UI with Bootstrap 5</small>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
