<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users - Collectibles Store</title>
    
    <!-- Bootstrap 5.3.2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark brand-bg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/items">
                <i class="bi bi-shop"></i> Collectibles Store
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/items">
                            <i class="bi bi-grid"></i> Items
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/users">
                            <i class="bi bi-people"></i> Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/offers">
                            <i class="bi bi-tags"></i> Offers
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <header class="brand-bg text-white py-5 mb-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-4 fw-bold mb-2">
                        <i class="bi bi-people-fill"></i> User Management
                    </h1>
                    <p class="lead mb-0">Manage all registered users in the system</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="/users/form/new" class="btn btn-light btn-lg">
                        <i class="bi bi-person-plus"></i> Add New User
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container mb-5">
        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-people text-primary fs-1"></i>
                        <h3 class="mt-2 mb-0">{{totalUsers}}</h3>
                        <p class="text-muted mb-0">Total Users</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-shield-check text-danger fs-1"></i>
                        <h3 class="mt-2 mb-0">{{adminCount}}</h3>
                        <p class="text-muted mb-0">Admins</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-briefcase text-success fs-1"></i>
                        <h3 class="mt-2 mb-0">{{sellerCount}}</h3>
                        <p class="text-muted mb-0">Sellers</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-cart text-info fs-1"></i>
                        <h3 class="mt-2 mb-0">{{buyerCount}}</h3>
                        <p class="text-muted mb-0">Buyers</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Users Grid -->
        {{#hasUsers}}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {{#users}}
            <div class="col">
                <div class="card h-100 hover-card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1">
                                    <i class="bi bi-person-circle"></i> {{name}}
                                </h5>
                                <p class="text-muted small mb-0">
                                    <i class="bi bi-key-fill"></i> ID: <span class="badge bg-secondary">{{id}}</span>
                                </p>
                            </div>
                            <div>
                                {{#isAdmin}}
                                <span class="badge bg-danger">
                                    <i class="bi bi-shield-check"></i> Admin
                                </span>
                                {{/isAdmin}}
                                {{#isSeller}}
                                <span class="badge bg-success">
                                    <i class="bi bi-briefcase"></i> Seller
                                </span>
                                {{/isSeller}}
                                {{#isBuyer}}
                                <span class="badge bg-info">
                                    <i class="bi bi-cart"></i> Buyer
                                </span>
                                {{/isBuyer}}
                            </div>
                        </div>

                        <div class="mb-3">
                            <p class="mb-2">
                                <i class="bi bi-envelope text-primary"></i>
                                <a href="mailto:{{email}}" class="text-decoration-none">{{email}}</a>
                            </p>
                            {{#createdAt}}
                            <p class="text-muted small mb-0">
                                <i class="bi bi-calendar-check"></i> Joined: {{createdAt}}
                            </p>
                            {{/createdAt}}
                        </div>

                        <div class="d-grid gap-2">
                            <a href="/users/{{id}}" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                            <div class="btn-group" role="group">
                                <a href="/users/form/{{id}}" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <button class="btn btn-outline-danger btn-sm" onclick="deleteUser('{{id}}', '{{name}}')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/users}}
        </div>
        {{/hasUsers}}

        <!-- Empty State -->
        {{^hasUsers}}
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3 mb-2">No Users Found</h3>
                <p class="text-muted mb-4">There are no users in the system yet.</p>
                <a href="/users/form/new" class="btn btn-primary">
                    <i class="bi bi-person-plus"></i> Add First User
                </a>
            </div>
        </div>
        {{/hasUsers}}
    </div>

    <!-- Footer -->
    <footer class="brand-bg text-white text-center py-4 mt-auto">
        <div class="container">
            <p class="mb-0">
                <i class="bi bi-shop"></i> Collectibles Store &copy; 2025 - User Management
            </p>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom Script -->
    <script src="/script.js"></script>
    
    <script>
        // Helper for role comparison in Mustache
        Mustache.tags = ['{{', '}}'];
        
        // Delete user function
        async function deleteUser(userId, userName) {
            if (!confirm(`Are you sure you want to delete user "${userName}"?`)) {
                return;
            }

            try {
                const response = await fetch(`/api/users/${userId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    // Show success message
                    alert(`User "${userName}" deleted successfully!`);
                    // Reload page
                    window.location.reload();
                } else {
                    alert(`Error: ${result.message}`);
                }
            } catch (error) {
                console.error('Error deleting user:', error);
                alert('Error deleting user. Please try again.');
            }
        }
    </script>
</body>
</html>
