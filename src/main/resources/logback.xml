<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Configuración del appender para consola -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configuración del appender para archivo -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/spark-collectibles-store.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger para Spark Framework -->
    <logger name="spark" level="INFO"/>
    
    <!-- Logger para la aplicación -->
    <logger name="com.collectibles" level="DEBUG"/>

    <!-- Configuración raíz -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
